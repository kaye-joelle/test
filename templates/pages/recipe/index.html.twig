{% extends 'base.html.twig' %}

{% block title %}ArchiDesign - Mes Fichiers{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% if not recipes.items is same as([]) %}
            <h1>Mes fichiers</h1>

            <a href="{{ path('recipe.new') }}" class="btn btn-primary">
                Créer un fichier
            </a>

            <div class="count mt-4">Il y a
                {{ recipes.getTotalItemCount }}
                recette(s)
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Numéro</th>
                        <th scope="col">Nom</th>
                        {# <th scope="col">Prix</th> #}
                        <th scope="col">Téléchargement</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Edition</th>
                        <th scope="col">Suppression</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in recipes %}
                        <tr class="table-primary">
                            <th scope="row">{{ recipe.id }}</th>
                            <td>{{ recipe.name }}</td>
                            {# <td>
                                {% if recipe.price is null %}
                                    Non renseigné
                                {% else %}
                                    {{ recipe.price|number_format(2, '.', ',') }}
                                    €
                                {% endif %}
                            </td> #}
                            {# <td>
                                {% if recipe.difficulty is null %}
                                    Non renseigné
                                {% else %}
                                    {{ recipe.difficulty }}
                                {% endif %}
                            </td> #}
                            <td>{{ recipe.createdAt|date('d/m/Y') }}</td>
							{# Supposons que le fichier associé à cette recette soit stocké dans la variable "file" #}
                            <td>
    							<a href="{{ path('download_existing_file', { 'id': recipe.id }) }}" class="btn btn-success">Télécharger</a>
							</td>
                            <td>
                                <a href="{{ path('recipe.edit', { id: recipe.id }) }}" class="btn btn-info">Modifier</a>
                            </td>
                            <td>
                                <a href="{{ path('recipe.delete', { id: recipe.id }) }}" class="btn btn-warning">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(recipes) }}
            </div>
        {% else %}
            <h4>Il n'y a pas de fichier</h4>

            <a href="{{ path('recipe.new') }}" class="btn btn-primary">
                Créer un fichier
            </a>
        {% endif %}
    </div>
{% endblock %}
